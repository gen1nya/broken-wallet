version: '3.8'

services:
  frontend:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: broken-wallet-frontend
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.wallet.rule=Host(`wallet.yourdomain.com`)"
      - "traefik.http.routers.wallet.entrypoints=websecure"
      - "traefik.http.routers.wallet.tls.certresolver=letsencrypt"
      - "traefik.http.services.wallet.loadbalancer.server.port=80"
    networks:
      - traefik
      - internal
    restart: unless-stopped
    depends_on:
      - backend

  backend:
    build:
      context: ./server
      dockerfile: Dockerfile
    container_name: broken-wallet-backend
    env_file:
      - ./server/.env
    environment:
      - NODE_ENV=production
      - PORT=3001
    networks:
      - internal
    restart: unless-stopped

networks:
  traefik:
    external: true
  internal:
    internal: true
